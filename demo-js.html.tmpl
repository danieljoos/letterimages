<!doctype html>

<html lang="en">

<head>
    <meta charset="utf-8">
    <title>letterimages - Demo Page</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link href="css/letterimages.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.1.1.slim.min.js" integrity="sha256-/SIrNqv8h6QGKDuNoLGA4iret+kyesCkHGzVUUV0shc=" crossorigin="anonymous"></script>
    <script type="application/javascript" src="js/letterimages.min.js"></script>

    <style>
        .customization-sample {
            display: inline-block;
            margin-top: 10px;
            margin-right: 10px;
            text-align: center;
        }

        .customization-sample code {
            display: block;
            margin-top: 5px;
        }
    </style>
</head>

<body>

    <div class="container">
        <div class="page-header">
            <h1>letterimages - CSS-only Demo Page</h1>
        </div>

        <div class="row">
        <div class="col-md-6">

        <h2>Rounded</h2>

        <% names.forEach((name) => { %>
        <div class="media">
            <div class="media-left">
                <i class="media-object letterimages letterimages-rounded" data-name="<%= name %>"></i>
            </div>
            <div class="media-body">
                <h4 class="media-heading"><%= name %></h4>
                <span class="text-muted"><% print(name.toLowerCase().split(' ').join('.')); %>@example.com</span>
            </div>
        </div>
        <% }); %>

        </div>
        <div class="col-md-6">

        <h2>Circle</h2>

        <% names.forEach((name) => { %>
        <div class="media">
            <div class="media-left">
                <i class="media-object letterimages letterimages-circle" data-name="<%= name %>"></i>
            </div>
            <div class="media-body">
                <h4 class="media-heading"><%= name %></h4>
                <span class="text-muted"><% print(name.toLowerCase().split(' ').join('.')); %>@example.com</span>
            </div>
        </div>
        <% }); %>

        </div>
        </div>

        <hr />

        <h2>Example Code</h2>
        <pre>
&lt;div class="media"&gt;
    &lt;div class="media-left"&gt;
        &lt;i class="media-object <strong><span class="bg-success">letterimages letterimages-rounded</span></strong>" <strong><span class="bg-success">data-name="John Doe"</span></strong>&gt;&lt;/i&gt;
    &lt;/div&gt;
    &lt;div class="media-body"&gt;
        &lt;h4 class="media-heading"&gt;John Doe&lt;/h4&gt;
        &lt;span class="text-muted"&gt;john.doe@example.com&lt;/span&gt;
    &lt;/div&gt;
&lt;/div&gt;</pre>

        <hr />

        <h2>Icon Sizes</h2>

        <% [128, 96, 64, 48, 32].forEach((r) => { %>
        <div class="customization-sample">
            <i class="letterimages letterimages-rounded letterimages-<%= r %>" data-name="Albert Einstein"></i>
            <code>letterimages-<%= r %></code>
        </div>
        <% }); %>

        <hr />

        <h2>Manual Coloring</h2>

        <% ['teal', 'blue', 'purple', 'orange', 'grey'].forEach((theme) => { %>
        <div class="customization-sample">
            <i class="letterimages letterimages-rounded letterimages-<%= theme %>" data-name="Niels Bohr"></i>
            <code>letterimages-<%= theme %></code>
        </div>
        <% }); %>

        <hr />

        <h2>All Glyphs</h2>

        <% 'abcdefghijklmnopqrstuvwxyz'.split('').forEach((letter) => { %>
        <div class="customization-sample">
            <i class="letterimages letterimages-rounded" data-name="<%= letter %>"></i>
        </div>
        <% }); %>

        <hr />

    </div>

    <script type="application/javascript">
        (function () {
            $('.letterimages').letterimages();
        }());
    </script>
</body>

</html>