<!doctype html>

<html lang="en">

<head>
    <meta charset="utf-8">
    <title>letterimages - Demo Page</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u"
        crossorigin="anonymous">
    <link href="letterimages.min.css" rel="stylesheet">

    <style>
        .customization-sample {
            display: inline-block;
            margin-top: 10px;
            margin-right: 10px;
            text-align: center;
        }

        .customization-sample code {
            display: block;
            margin-top: 5px;
        }
    </style>
</head>

<body>

    <div class="container">
        <div class="page-header">
            <h1>letterimages - CSS-only Demo Page</h1>
        </div>

        <div class="row">
        <div class="col-md-6">

        <h2>Rounded</h2>

        <% names.forEach((name) => { %>
        <div class="media">
            <div class="media-left">
                <img class="media-object letterimages-profile letterimages-rounded" data-name="<%= name %>">
            </div>
            <div class="media-body">
                <h4 class="media-heading"><%= name %></h4>
                <span class="text-muted"><% print(name.toLowerCase().split(' ').join('.')); %>@example.com</span>
            </div>
        </div>
        <% }); %>

        </div>
        <div class="col-md-6">

        <h2>Circle</h2>

        <% names.forEach((name) => { %>
        <div class="media">
            <div class="media-left">
                <img class="media-object letterimages-profile letterimages-circle" data-name="<%= name %>">
            </div>
            <div class="media-body">
                <h4 class="media-heading"><%= name %></h4>
                <span class="text-muted"><% print(name.toLowerCase().split(' ').join('.')); %>@example.com</span>
            </div>
        </div>
        <% }); %>

        </div>
        </div>

        <hr />

        <h2>Example Code</h2>
        <pre>
&lt;div class="media"&gt;
    &lt;div class="media-left"&gt;
        &lt;img class="media-object <strong><span class="bg-success">letterimages-profile letterimages-rounded</span></strong>" <strong><span class="bg-success">data-name="John Doe"</span></strong>&gt;
    &lt;/div&gt;
    &lt;div class="media-body"&gt;
        &lt;h4 class="media-heading"&gt;John Doe&lt;/h4&gt;
        &lt;span class="text-muted"&gt;john.doe@example.com&lt;/span&gt;
    &lt;/div&gt;
&lt;/div&gt;</pre>

        <hr />

        <h2>Icon Sizes</h2>

        <% [128, 72, 64, 48, 32].forEach((r) => { %>
        <div class="customization-sample">
            <img class="letterimages-profile letterimages-rounded letterimages-<%= r %>" data-name="Albert Einstein">
            <code>letterimages-<%= r %></code>
        </div>
        <% }); %>

        <hr />

        <h2>Manual Coloring</h2>

        <% ['teal', 'blue', 'purple', 'orange', 'grey'].forEach((theme) => { %>
        <div class="customization-sample">
            <img class="letterimages-profile letterimages-rounded letterimages-<%= theme %>" data-name="Niels Bohr">
            <code>letterimages-<%= theme %></code>
        </div>
        <% }); %>

        <hr />

    </div>
</body>

</html>